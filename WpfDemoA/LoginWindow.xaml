<Window x:Class="WpfDemoA.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoA"
        mc:Ignorable="d"
        Title="Sistema de Ingresos L+R - Acceso Seguro" 
        Height="500" Width="900" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="#f8f9fa"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilos para campos de entrada -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e1e5e9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                                <Setter Property="Background" TargetName="border" Value="#fafbfc"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="#f5f6fa"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#e1e5e9"/>
                                <Setter Property="Foreground" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e1e5e9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                                <Setter Property="Background" TargetName="border" Value="#fafbfc"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="#f5f6fa"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#e1e5e9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón principal -->
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" 
                                            Focusable="False" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2E6DA4"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="#95a5a6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Color="#20000000" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo Mejorado -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4A90E2" Offset="0"/>
                        <GradientStop Color="#357ABD" Offset="0.5"/>
                        <GradientStop Color="#2E6DA4" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                    <!-- Logo mejorado -->
                    <Border Background="White" CornerRadius="15" Width="80" Height="80" Margin="0,0,0,25">
                        <TextBlock Text="🚚" FontSize="40" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Texto principal -->
                    <TextBlock Text="SISTEMA DE" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Light" 
                               TextAlignment="Center"
                               Opacity="0.9"/>
                    <TextBlock Text="INGRESOS L+R" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,5,0,15" 
                               TextAlignment="Center"/>

                    <Rectangle Height="2" Fill="White" Opacity="0.3" Margin="20,0"/>

                    <TextBlock Text="Gestión Profesional de"
                               Foreground="White"
                               FontSize="13"
                               TextAlignment="Center"
                               Opacity="0.8"
                               Margin="0,15,0,2"/>
                    <TextBlock Text="Vehículos de Carga"
                               Foreground="White"
                               FontSize="13"
                               FontWeight="SemiBold"
                               TextAlignment="Center"
                               Opacity="0.9"/>
                </StackPanel>
            </Grid>

            <!-- Panel Derecho Mejorado -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Barra de título personalizada -->
                <Grid Grid.Row="0" Background="#f8f9fa" Height="40">
                    <TextBlock Text="Acceso al Sistema" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               Margin="20,0"
                               FontSize="12"
                               Foreground="#6c757d"
                               FontWeight="Medium"/>
                    <Button x:Name="btnClose" 
                            Content="✕" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Width="30" Height="30" 
                            Margin="10,0"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="#6c757d"
                            Cursor="Hand"
                            Click="BtnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#e9ecef"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Contenido principal -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="50,20">
                    <TextBlock Text="Iniciar Sesión" 
                               FontSize="28" 
                               FontWeight="Light" 
                               Margin="0,0,0,10"
                               Foreground="#2c3e50"/>
                    <TextBlock Text="Ingrese sus credenciales para acceder" 
                               FontSize="14" 
                               Foreground="#6c757d"
                               Margin="0,0,0,30"/>

                    <!-- Campo Usuario -->
                    <Label Content="Usuario" FontWeight="Medium" Margin="0,0,0,8" Foreground="#495057"/>
                    <TextBox x:Name="txtUsuario" 
                             Style="{StaticResource ModernTextBox}"
                             TabIndex="1"/>

                    <!-- Campo Contraseña -->
                    <Label Content="Contraseña" FontWeight="Medium" Margin="0,20,0,8" Foreground="#495057"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 TabIndex="2"/>

                    <!-- Mensaje de estado -->
                    <TextBlock x:Name="lblMensaje" 
                               Margin="0,15,0,0"
                               TextAlignment="Left" 
                               FontSize="13"
                               FontWeight="Medium"
                               Visibility="Collapsed"/>

                    <!-- Botón de login -->
                    <Button x:Name="btnLogin" 
                            Content="INICIAR SESIÓN"
                            Style="{StaticResource LoginButton}"
                            Margin="0,25,0,0"
                            TabIndex="3"
                            Click="BtnLogin_Click"/>

                    <!-- Loading indicator -->
                    <StackPanel x:Name="pnlLoading" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="🔄" FontSize="16" Margin="0,0,10,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation" CenterX="8" CenterY="8"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Verificando credenciales..." 
                                   FontSize="13" 
                                   Foreground="#6c757d"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="20" HorizontalAlignment="Center">
                    <TextBlock Text="© 2025 Sistema de Ingresos L+R" 
                               FontSize="11" 
                               Foreground="#adb5bd" 
                               TextAlignment="Center"/>
                    <TextBlock Text="Versión 1.0.0" 
                               FontSize="10" 
                               Foreground="#dee2e6" 
                               TextAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>