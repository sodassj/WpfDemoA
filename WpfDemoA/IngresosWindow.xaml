<Window x:Class="WpfDemoA.IngresosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoA"
        mc:Ignorable="d"
        Title="Registro de Ingresos" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#f8f9fa" Offset="0"/>
                <GradientStop Color="#e9ecef" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007bff" Padding="20,15">
            <Grid>
                <TextBlock Text="Registro de Ingresos" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <Button x:Name="btnVolver" 
                       Content="Volver al Menú" 
                       HorizontalAlignment="Right"
                       Background="#6c757d"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,8"
                       FontWeight="Bold"
                       Cursor="Hand"
                       Click="BtnVolver_Click"/>
            </Grid>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" Margin="30">
            <StackPanel>

                <!-- Mensaje de estado -->
                <TextBlock x:Name="lblMensaje" 
                          Margin="0,0,0,20"
                          TextAlignment="Center"
                          FontWeight="Bold"
                          FontSize="14"
                          Visibility="Collapsed"/>

                <!-- Formulario -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="30"
                       BorderThickness="1"
                       BorderBrush="#dee2e6">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Primera fila -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,10">
                            <Label Content="Tipo Documento:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbTipoDocumento" Height="35" FontSize="14">
                                <ComboBoxItem Content="DNI"/>
                                <ComboBoxItem Content="RUC"/>
                                <ComboBoxItem Content="CE"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,10">
                            <Label Content="Número Documento:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNumeroDocumento" Height="35" FontSize="14" Padding="10,5"/>
                        </StackPanel>

                        <!-- Segunda fila -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,10">
                            <Label Content="Placa:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPlaca" Height="35" FontSize="14" Padding="10,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,10">
                            <Label Content="Turno:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbTurno" Height="35" FontSize="14">
                                <ComboBoxItem Content="Mañana"/>
                                <ComboBoxItem Content="Tarde"/>
                                <ComboBoxItem Content="Noche"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Tercera fila -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,10">
                            <Label Content="Nombre Conductor:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNombreConductor" Height="35" FontSize="14" Padding="10,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,10">
                            <Label Content="Nombre Cliente:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNombreCliente" Height="35" FontSize="14" Padding="10,5"/>
                        </StackPanel>

                        <!-- Cuarta fila -->
                        <StackPanel Grid.Column="0" Grid.Row="3" Margin="0,10">
                            <Label Content="Fecha y Hora:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dtpFecha" Height="35" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="3" Margin="0,10">
                            <Label Content="Peso de Ingreso (Kg):" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPesoIngreso" Height="35" FontSize="14" Padding="10,5"/>
                        </StackPanel>

                        <!-- Botones -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="0,30,0,0">

                            <Button x:Name="btnRegistrar" 
                                   Content="Registrar Ingreso" 
                                   Background="#28a745"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="20,10"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Cursor="Hand"
                                   Margin="0,0,10,0"
                                   Click="BtnRegistrar_Click"/>

                            <Button x:Name="btnLimpiar" 
                                   Content="Limpiar" 
                                   Background="#6c757d"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="20,10"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"
                                   Click="BtnLimpiar_Click"/>
                        </StackPanel>

                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
