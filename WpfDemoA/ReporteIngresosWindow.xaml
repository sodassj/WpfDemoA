<Window x:Class="WpfDemoA.ReporteIngresosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoA"
        mc:Ignorable="d"
        Title="Reporte de Ingresos" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Grid Margin="10">
        <DataGrid x:Name="dataGridIngresos"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tipo Documento" Binding="{Binding TipoDocumento}" />
                <DataGridTextColumn Header="Número Documento" Binding="{Binding NumeroDocumento}" />
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" />
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" />
                <DataGridTextColumn Header="Nombre Conductor" Binding="{Binding NombreConductor}" />
                <DataGridTextColumn Header="Nombre Cliente" Binding="{Binding NombreCliente}" />
                <!-- Aquí corregimos el StringFormat -->
                <DataGridTextColumn Header="Fecha y Hora">
                    <DataGridTextColumn.Binding>
                        <Binding Path="FechaHora" StringFormat="{}{0:dd/MM/yyyy HH:mm}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Peso de Ingreso" Binding="{Binding PesoIngreso}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>